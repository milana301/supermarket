<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button8"
            style="@style/text_view_style"
            android:layout_width="410dp"
            android:layout_height="80dp"
            android:background="#325B5656"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button1"
            style="@style/text_view_style"
            android:layout_width="410dp"
            android:layout_height="85dp"
            android:background="#405B5656"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button4"
            style="@style/text_view_style"
            android:layout_width="410dp"
            android:layout_height="85dp"
            android:background="#325B5656"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button5"
            style="@style/text_view_style"
            android:layout_width="410dp"
            android:layout_height="85dp"
            android:background="#405B5656"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="281dp"
            android:layout_height="233dp"
            android:layout_marginTop="-75dp"
            app:srcCompat="@drawable/images_removebg_preview" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-170dp"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/fru_512_512_removebg_preview_1" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-150dp"
            app:srcCompat="@drawable/image_removebg_preview_1" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="240dp"
            android:layout_height="214dp"
            android:layout_marginTop="-124dp"
            app:srcCompat="@drawable/image_removebg_preview__1__1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/black">


        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>